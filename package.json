{
  "name": "ferracine-whatsapp-bot",
  "version": "1.2.0",
  "description": "Bot to handle the customer service of Ferracine's real state.",
  "main": "src/index.ts",
  "scripts": {
    "start": "yarn build && node dist/src/index.js",
    "build": "tsc",
    "lint": "eslint ./src/ --ext .ts -f html -o eslint.html",
    "lint:fix": "eslint ./src/ --ext .ts -f html -o eslint.html --fix",
    "commit": "npx git-cz",
    "start:dev": "dotenv -e .env -- ts-node-dev --inspect --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunohafonso95/ferracine-whatspp-bot.git"
  },
  "keywords": [
    "bot",
    "whatsapp",
    "customer",
    "service",
    "chatbot"
  ],
  "author": "Bruno Afonso <brunohafonso@gmail.com>",
  "contributors": [
    {
      "name": "Luiz Felipe",
      "email": "luizfelipesousa@hotmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brunohafonso95/ferracine-whatspp-bot/issues"
  },
  "homepage": "https://github.com/brunohafonso95/ferracine-whatspp-bot#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix -f html -o lint.html"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/express": "^4.17.9",
    "@types/pino": "^6.3.4",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.5.3",
    "pino-prettier": "^1.0.1",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "express": "^4.17.1",
    "pino": "^6.8.0"
  }
}
